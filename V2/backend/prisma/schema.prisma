generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * model:
 * user(id, name, email(unique),role(admin, user), password)
 * weather(id, date, temperature, windspeed, humidity, pressure, rainfall)
 */

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  role     Role   @default(user)
  password String
}

enum Role {
  admin
  user
}

model Weather {
  id          String   @id @default(cuid())
  date        DateTime
  temperature Float
  windspeed   Float
  humidity    Float
  pressure    Float
  rainfall    Float
}
